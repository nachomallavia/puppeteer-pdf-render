                                <tr>
                                    <th>Id Solicitud</th>
                                    <th>Id Crédito</th>
                                    <th>Fecha Préstamo</th>
                                    <th>Linea</th>
                                    <th>Proveedor Financiero</th>
                                    <th>Capital</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>{{Id_Solicitud}}</td>
                                <td>{{Id_Credito}}</td>
                                <td>{{formatDate Fecha_Prestamo}}</td>
                                <td>{{Linea}}</td>
                                <td>{{Proveedor_Financiero}}</td>
                                <td>${{format Capital}}</td>
                            </tr>
                        </tr>
                        <tr>
                            <thead>
                                <tr>
                                    <th>Plazo</th>
                                    <th>Valor Cuota</th>
                                    <th>Cuotas Pagadas</th>
                                    <th>Cuotas Impagas</th>
                                    <th>Mora</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>{{Plazo}}</td>
                                <td>${{format ValorCuota}}</td>
                                <td>{{Cuotas_Pagadas}}</td>
                                <td>{{Cuotas_Impagas}}</td>
                                <td>${{format Mora}}</td>
                                <td>{{Estado}}</td>
                            </tr>
                        </tr>
                    </table>
                    {{/each}}
                </div>
                {{/if}}

