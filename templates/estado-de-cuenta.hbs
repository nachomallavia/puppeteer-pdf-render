                        <td>{{formatDate credito.Fecha_Prestamo}}</td>
                        <td>{{credito.Proveedor_Financiero}}</td>
                        <td>${{credito.Capital}}</td>
                        <td>{{credito.Plazo}}</td>
                        <td>${{credito.ValorCuota}}</td>
                    </tr>                       
                    {{/each}}
                </table>
            </div>
            {{/if}}
