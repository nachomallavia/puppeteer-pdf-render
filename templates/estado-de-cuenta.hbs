                <div class="yellow-heading grey-background">Créditos no administrados</div>
                <table class="social-cuota grey-text grey-border">
                    <thead>
                        
                        <tr class="grey-border">
                            <th>Id Crédito</th>
                            <th>Fecha Préstamos</th>
                            <th>Proveedor Financ.</th>    
                            <th>Capital</th>
                            <th>Plazo</th>
                            <th>Valor Cuota</th>
                            <th>Cuotas Pagadas</th>
                            <th>Cuotas Impagas</th>
                            <th>Cuotas a futuro</th>    
                            <th>Medio de pago</th>
                            <th>Estado</th>
                        </tr>
                    </thead>    
                        {{#each creditosNoAdministrados as |credito|}}                        
